<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectUserActivity">

    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_helper"
        android:text="도움이 필요하신가요?"
        android:id="@+id/btn_helped"/>


    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_helped"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="도움을 주실건가요?"
        android:id="@+id/btn_helper"/>

</android.support.constraint.ConstraintLayout>